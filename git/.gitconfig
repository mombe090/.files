[alias]
 co = checkout
 br = branch
 ci = commit
 st = status
[pull]
 rebase = true
[init]
 defaultBranch = main

[user]
 # Personal information moved to ~/.gitconfig.local
 # Create ~/.gitconfig.local with your name and email
 name = Mamadou Yaya DIALLO
 email = yayamombeya090@gmail.com
[credential "https://github.com"]
 helper =
 helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
 helper =
  helper = !/usr/bin/gh auth git-credential

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    #dark = dark      # or light = true, or omit for auto-detection

[merge]
    conflictStyle = zdiff3

[include]
 path = ~/.config/delta/themes/catppuccin.gitconfig
 # Include local configuration (not tracked in git)
 path = ~/.gitconfig.local

[delta]
  features = catppuccin-mocha
  side-by-side = true
